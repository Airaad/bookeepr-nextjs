generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int      @id @default(autoincrement())
  email      String   @unique
  password   String
  name       String
  books      Book[]
  createdAt  DateTime @default(now())
}

model Book {
  id        Int      @id @default(autoincrement())
  isbn      Int
  title     String
  author    String
  content   String
  rating    Int
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}